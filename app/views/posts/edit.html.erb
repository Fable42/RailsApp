<div>Edit post <%= @post.id %></div>

<%= form_with model: @post do |form| %>

  <p>
    <%= form.text_area :body, rows:5, placeholder: 'Post_text' %>
  </p>


  <p>
    <%= form.text_field :user_id, placeholder: 'user_id' %>
  </p>

  <p>
    <%= form.submit 'Edit' %>
  </p>

<% end %>

<div>
  <%= button_to 'Delete post', post_path(@post), method: :delete %>
</div>