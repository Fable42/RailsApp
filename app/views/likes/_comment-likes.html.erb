<div id="comment-likes-<%= comment.id %>">
  <%= comment.likes_count %> Likes

  <% like = current_user.likes.find_by(likeable: comment) %>
  <% if like.nil? %>
    <%= button_to "Like", likes_path, params: {like: {likeable_id: comment.id, likeable_type: Comment}}, method: :post %>
  <% else %>
    <%= button_to "Unike", like_path(like[:id]), method: :delete %>
  <% end %>
</div>